<% content_for :head do %>
  <meta name="title" content="<%=@user.username %>ページの編集">
  <meta name="description" content="<%=@user.username %>の情報の編集">
<% end %>

<div class="container">
  <div class="row form">
    <div class="col-xs-4 col-xs-offset-4 edit_profile">
      <h2 style="text-align: center;">プロフィール編集</h2>

      <%= form_for(@user) do |f| %>
        <div class="field">
          <%= f.label :username, "お名前" %> <em>(最大6文字)</em><br>
          <%= f.text_field :username, autofocus: true, class: 'input form-control' %>
        </div><br/>

        <div class="field">
          <%= f.label :avatar, "プロフィール画像" %>
          <%= f.file_field :avatar, class: "form-control" %>
        </div><br/>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, class: 'input form-control' %>
        </div><br/>

        <div class="field">
          <%= f.label :place, "現在地" %>
          <%= f.select :place, @prifectures, class: "form-control" %>
        </div><br/>

        <div class="field">
          <%= f.label :gender, "性別" %>
          <%= f.select :gender, @genders, class: "form-control" %>
        </div><br/>

        <div class="birth_date_field">
          <%= f.label :birth, "生年月日" %><br/>
           <%= raw sprintf(
              f.date_select(
                  :birth,
                  use_month_numbers: true,
                  start_year:        1930,
                  end_year:          (Time.now.year - 18),
                  default:           Date.new(1989, 1, 31),
                  date_separator:    '%s'),
              '年 ', '月 ') + '日' %>
        </div><br/>



        <div class="actions">
          <%= f.submit "プロフィールを更新する", class: 'btn btn-primary withripple' %>
        </div>
      <% end %><br/>
      <div>

      </div>
    </div>
  </div>
</div>